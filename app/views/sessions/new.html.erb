<h1>Log in</h1>

<%= form_tag '/login', :class => "form-horizontal center" do %>
<div class="form-group">
  <%= label :email, "Email:", class: "col-md-4 control-label" %>
  <div class="col-md-8">
    <%= text_field_tag :email, params[:email], class: 'form-control', autofocus: true %>
  </div>
</div>
<div class="form-group">
  <%= label :password, "Password:", class: "col-md-4 control-label" %>
  <div class="col-md-8">
    <%= password_field_tag :password, params[:password], class: 'form-control'%>
  </div>
</div>
<%= submit_tag "Submit", class: "btn btn-default btn-primary" %>

<% end %>
